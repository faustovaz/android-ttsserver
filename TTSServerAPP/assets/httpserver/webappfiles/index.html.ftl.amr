<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<link rel="stylesheet" type="text/css" href="css/app.css">
	<script src="js/jquery.js"></script>
	<script src="js/app.js"></script>
</head>
<body>
	<div id="main">
		<div id="content">
			<div id="fork-me">
				<a href="https://github.com/faustovaz/android-ttsserver"><img src="img/fork-me.png" /></a>
			</div>
			<div id="upload-files">
				<div id="upload-files-text">
					Drag n' drop</br>your files here</br>or select them
				</div>
				<div id="upload-files-holder-button">	
					<div id="upload-files-button">
						Select-them
						<input type='file' name='files[]' multiple id='input-file'/>
					</div>
				</div>
			</div>
			<div id="files">
				<ul class="file-list">	
					<!-- $BeginBlock Block -->
					<li>
						<div class="file-image"><img src="img/${fileTypeImageName}.png"/></div>
						<div class="file-name">${normalizedFileName}</div>
						<div class="file-size">${normalizedFileSize}</div>
						<div class="file-download"><a href='download/${name}'>Download</a></div>
					</li>
					<!-- $EndBlock Block -->
				</ul>
			</div>
		</div>
	</div>
	<div id="show-files-to-upload">
		<div id='show-files-to-upload-title-bar'>
			<div id='show-files-to-upload-title'>Arquivos selecionados</div>
			<div id='show-files-to-upload-title-close'>[X]</div>
		</div>
		<ul class="file-list" id="list-selected-files">																		
		</ul>
	</div>
	<div id="show-files-to-upload-background">
	</div>
</body>
</html>